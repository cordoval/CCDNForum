<div class="common_box_5 bg_header_smoke">
	<div class="common_box_header">
		<span class="heading_glow">{{ 'topic.transcript' |trans({'%topic_title%': topic.getTitle}, 'CCDNForumForumBundle') }}</span>
	</div>
	<div class="common_box_panel padding_0">
		<div class="scrollable_panel" style="height: 300px;">
			{% for post in topic.getPosts %}					
				<div class="common_box_panel bg_header_sub_item padding_5">
					<div class="column h_align_left padding_5">					
						{% if post.getCreatedBy %}
						<a class="username_medium" href="{{ path(user_profile_route, {'user_id': post.getCreatedBy.getId } ) }}">{{ post.getCreatedBy }}</a>
						{% else %}Guest{% endif %}
					</div>
					<div class="column h_align_right padding_5">
						<span class="common_note">&nbsp;{{ 'generic.posted_at' |trans({}, 'CCDNForumForumBundle') }}{{ post.getCreatedDate|date("d/m/Y - H:i:s") }}</span>	
					</div>
				</div>
				<div class="common_box_panel bg_item_light">
					{% if post.getDeletedBy %}
					<div class="common_box_5 margin_10 padding_2">
						<div class="common_box_5 margin_0 padding_10">
							<div class="padding_10">
								<span class="common_body">
								{{ 'post.is_deleted' | trans({}, 'CCDNForumForumBundle') }} - 
								{{ 'post.deleted_by' |trans({}, 'CCDNForumForumBundle') }}
								{% if post.getDeletedBy %}{{ post.getDeletedBy.getUsername }}{% else %}Guest{% endif %}
								{{ 'actioned.at' |trans({}, 'CCDNForumForumBundle') }}{{ post.getCreatedDate|date("d/m/Y - H:i:s") }}
								</span>
							</div>
						</div>
					</div>
					{% else %}
					<div class="common_box_5 margin_10 padding_10">
						<span class="common_body">
						{{ post.getBody |raw }}
						</span>
					</div>
					{% endif %}					
				</div>
			{% endfor %}
		</div>
	</div>
</div>