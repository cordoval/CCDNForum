{% extends 'CCDNCommonCommonBundle:Layout:layout_body_left.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('bundles/ccdncommoncommon/css/form.css') }}" rel="stylesheet" type="text/css" />
	<link href="{{ asset('bundles/ccdncommoncrumbtrail/css/crumbs.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block title %}{{ 'title.board.edit'| trans({'%board_name%': board.name}, 'CCDNForumForumAdminBundle') }}{% endblock %}

{% block sidebar %}
	{% if is_granted('ROLE_MODERATOR') %}
	<div class="common_box_5 bg_header_smoke">
		<div class="common_box_header"><span class="heading_glow">{{ 'sidebar.header.special' | trans({}, 'CCDNCommonCommonBundle') }}</span></div>
		<div class="common_box_panel"><a class="sidebar" href="{{ path('cc_moderator_forum_cp') }}">{{ 'general.view.link_moderate' | trans({}, 'CCDNCommonCommonBundle') }}</a></div>
		{% if is_granted('ROLE_ADMIN') %}
		<div class="common_box_panel"><a class="sidebar" href="{{ path('cc_admin_forum_cp') }}">{{ 'general.view.link_administrate' | trans({}, 'CCDNCommonCommonBundle') }}</a></div>
		{% endif %}
	</div>
	{% endif %}
{% endblock %}

{% block body %}

{% include 'CCDNCommonCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}

{% include 'CCDNCommonCommonBundle:Flashes:flashes.html.twig' %}

<div class="common_box_5 bg_header_smoke">
	<div class="common_box_header">
		<span class="heading_glow">{{ 'title.board.edit'| trans({'%board_name%': board.name}, 'CCDNForumForumAdminBundle') }}</span>
	</div>
	<div class="common_box_panel common_tool_strip">
		<span class="common_h2">
			<img class="icon_16x16" width="16px" height="16px" src="{{ asset('bundles/ccdncommoncommon/images/icons/Black/16x16/16x16_board.png') }}" />
			<a class="board_link" href="{{ path('cc_forum_board_show', {'board_id': board.getId }) }}">{{ board.getName }}</a>
		</span>
	</div>
	<div class="common_box_panel">
		<form action="{{ path('cc_admin_forum_board_edit', {'board_id': board.id}) }}" method="post" {{ form_enctype(form) }}>
			{{ form_row(form._token) }}
			<div class="errors">{{ form_errors(form) }}</div>
			<table class="common_list">
				<thead>
					<th style="width: 30%;"></th>
					<th style="width: 70%;"></th>
				</thead>
				<tfoot>
				</tfoot>
				<tbody>
					<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
						<td class="h_align_right v_align_middle">{{ form_label(form.category, null, { 'label': 'form.label.board.category'| trans({}, 'CCDNForumForumAdminBundle') }) }}</td>
						<td class="h_align_left v_align_middle">
							{{ form_errors(form.category) }}
							{{ form_widget(form.category) }}
						</td>
					</tr>				
					<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
						<td class="h_align_right v_align_middle">{{ form_label(form.name, null, { 'label': 'form.label.board.name'| trans({}, 'CCDNForumForumAdminBundle') }) }}</td>
						<td class="h_align_left v_align_middle">
							{{ form_errors(form.name) }}
							{{ form_widget(form.name) }}
						</td>
					</tr>
					<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
						<td class="h_align_right v_align_top">{{ form_label(form.description, null, { 'label': 'form.label.board.description'| trans({}, 'CCDNForumForumAdminBundle') }) }}</td>
						<td class="h_align_left v_align_middle">
							{{ form_errors(form.description) }}
							{{ form_widget(form.description) }}
						</td>
					</tr>
					<tr class="{{ cycler(['row_odd', 'row_even'], 'cycle') }}">
						<td class="h_align_centre v_align_middle" colspan="2">
							<input type="submit" value="{{ 'form.button.board.edit'| trans({}, 'CCDNForumForumAdminBundle') }}" />
						</td>
					</tr>
				</tbody>
			</table>
		</form>
	</div>
</div>

{% include 'CCDNCommonCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}

{% endblock %}